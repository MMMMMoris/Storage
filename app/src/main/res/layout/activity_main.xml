<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/switchButton"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginTop="178dp"
            android:text="Switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/lighterButton"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginTop="271dp"
            android:text="Lighter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:id="@+id/dimmerButton"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginTop="362dp"
            android:text="Dimmer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/toSecondIntent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="466dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>