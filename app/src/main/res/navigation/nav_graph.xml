<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/FirstFragment">

    <fragment
            android:id="@+id/FirstFragment"
            android:name="com.cohiiPad.storage.MainActivity"
            android:label="@string/app_name"
            tools:layout="@layout/activity_main">

        <action
                android:id="@+id/action_FirstFragment_to_InfraredActivity"
                app:destination="@+id/InfraredActivity"/>
    </fragment>
    <fragment
            android:id="@+id/InfraredActivity"
            android:name="com.cohiiPad.storage.InfraredActivity"
            android:label="@string/app_name"
            tools:layout="@layout/activity_infrared">

        <action
                android:id="@+id/action_InfraredActivity_to_FirstFragment"
                app:destination="@id/FirstFragment"/>
    </fragment>
</navigation>